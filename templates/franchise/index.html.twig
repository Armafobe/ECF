                <div class="flex space-x-6 p-6">
                    <div class="flex-1 truncate">
                        <div class="flex items-center space-x-2">
                            <div class="ml-1 form-check form-switch">
                                <label for="{{ structure.id }}" class="truncate text-sm font-medium text-amber-900">{{ structure.address }}</label>
                                <input id="{{ structure.id }}" class="form-check-input" type="checkbox" role="switch"
                                {% if user.roles == ['ROLE_USER'] %}
                                        disabled
                                {% endif %}
                                >
                            </div>
                            {#                            {% if active %}#}

                            {#                            <span class="inline-block flex-shrink-0 rounded-full bg-red-400 px-2 py-0.5 text-xs font-medium text-green-800">Inactif</span>#}
                            {#                            {% endif %}#}
                        </div>
{#                                <p class="mt-1 truncate text-sm text-gray-500">Regional Paradigm Technician</p>#}
                        </div>
                </div>

                    <div class="flex justify-center w-full">
                        <a href="{{ path('structure', {'name': franchise.name, 'id': structure.id}) }}" class="py-4 text-sm font-medium text-gray-700 hover:text-gray-500">
                            Voir les d√©tails
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="mx-auto divide-y divide-gray-200 w-10/12 sm:w-3/5 lg:w-1/2 xl:w-1/4 overflow-hidden rounded-lg my-4 bg-white shadow">
        <div class="px-4 py-3 text-center sm:px-6">
            Vos permissions
        </div>
        {{ form_start(form) }}
        <div class="px-4 py-5 sm:p-6 grid grid-cols-3 gap-x-2 max-rows-max">
            {% for perm in form.permissions %}

            <div class="col-start-1 justify-self-end form-check form-switch">
                {{ form_widget(perm, {'attr': {'class': 'form-check-input'}}) }}
            </div>
            <span class="col-start-2 col-span-2 justify-self-start">{{ form_label(perm) }}</span>
